<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:comp="clr-namespace:StarFallMC.Component">
    <Style x:Key="WindowTextBox" TargetType="comp:TextInput" 
           BasedOn="{StaticResource {x:Type comp:TextInput}}">
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="MaxLength" Value="4"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryBrush_2}"></Setter>
    </Style>
    <Style x:Key="CustomInfoTitle" TargetType="TextBlock" 
           BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="10 0"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="Width" Value="80"></Setter>
    </Style>
    <Style x:Key="CustomInfoTextBox" TargetType="comp:TextInput" 
           BasedOn="{StaticResource {x:Type comp:TextInput}}">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Padding" Value="2"></Setter>
        <Setter Property="Margin" Value="5 0 20 0"></Setter>
    </Style>
</ResourceDictionary>