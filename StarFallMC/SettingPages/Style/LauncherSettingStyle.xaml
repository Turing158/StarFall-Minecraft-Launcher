<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ColorBtn" TargetType="Button">
        <Setter Property="Width" Value="30"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="Margin" Value="15 0"></Setter>
        <Setter Property="ClipToBounds" Value="False"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid ClipToBounds="False">
                        <Canvas  Name="ColorName" 
                                 HorizontalAlignment="Center"
                                 RenderTransformOrigin="0.5 0.5">
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="{DynamicResource SecondaryBrush_1}" 
                                       FontSize="14">
                            </TextBlock>
                            <Canvas.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform></TranslateTransform>
                                    <ScaleTransform ScaleX="0" ScaleY="0"></ScaleTransform>
                                </TransformGroup>
                            </Canvas.RenderTransform>
                        </Canvas>
                        <Border Name="ColorBorder" CornerRadius="5" Background="{TemplateBinding Background}"
                                BorderBrush="#f1f1f1" BorderThickness="2" RenderTransformOrigin="0.5 0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"></ScaleTransform>
                            </Border.RenderTransform>
                            <ContentPresenter></ContentPresenter>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ColorBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1.2" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ColorBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1.2" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ColorName" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)"
                                                         To="-30" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ColorName" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                                                         To="1" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ColorName" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                                                         To="1" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ColorBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ColorBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ColorName" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)"
                                                         To="0" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ColorName" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                                                         To="0" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ColorName" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                                                         To="0" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="ColorBorder" TargetType="Border">
        <Setter Property="Width" Value="14"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="BorderBrush" Value="#f1f1f1"></Setter>
        <Setter Property="BorderThickness" Value="2 0 0 0"></Setter>
        <Setter Property="CornerRadius" Value="0 5 8 0"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
    </Style>
</ResourceDictionary>