<Page x:Class="StarFallMC.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:comp="clr-namespace:StarFallMC.Component"
      mc:Ignorable="d"
      Title="Setting" Height="400" Width="800">
    <Page.Resources>
        <ResourceDictionary Source="Style/SettingStyle.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid Background="#f1f1f1">
        <Border Style="{StaticResource SettingAndResourceBg}"></Border>
        <Border Style="{StaticResource SettingAndResourceNaviBg}">
            <comp:NavigationBar x:Name="SettingBar"
                                Style="{StaticResource SettingAndResourceNavi}"
                                ItemsSource="{Binding Navi}"
                                SelectionChanged="NaviBar_OnSelectionChanged"></comp:NavigationBar>
        </Border>
        <Frame Name="PageFrame"
               Source="/SettingPages/GameSetting.xaml"
               Style="{StaticResource SettingAndResourceFrame}">
            <Frame.RenderTransform>
                <TranslateTransform Y="0"></TranslateTransform>
            </Frame.RenderTransform>
        </Frame>
    </Grid>
</Page>
