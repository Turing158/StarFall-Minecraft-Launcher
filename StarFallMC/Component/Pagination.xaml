<UserControl x:Class="StarFallMC.Component.Pagination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:StarFallMC.Component"
             xmlns:extension="clr-namespace:StarFallMC.Util.Extension"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="600"
             Loaded="Pagination_OnLoaded">
    <UserControl.Resources>
        <Style x:Key="PaginateBtn" TargetType="local:Button" 
               BasedOn="{StaticResource {x:Type local:Button}}">
            <Setter Property="Width" Value="{Binding Height,RelativeSource={RelativeSource AncestorType=local:Pagination}}"></Setter>
            <Setter Property="Height" Value="{Binding Height,RelativeSource={RelativeSource AncestorType=local:Pagination}}"></Setter>
            <Setter Property="Margin" Value="{Binding ItemMargin,RelativeSource={RelativeSource AncestorType=local:Pagination}}"></Setter>
        </Style>
        <Style x:Key="PaginationNum" TargetType="TextBlock" 
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="{Binding ItemFontSize,RelativeSource={RelativeSource AncestorType=local:Pagination}}"></Setter>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"></Setter>
        </Style>
        <Style x:Key="PaginateIcon" TargetType="TextBlock" 
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontFamily" Value="{StaticResource IconFontFamily}"></Setter>
            <Setter Property="FontSize" Value="{Binding IconSize,RelativeSource={RelativeSource AncestorType=local:Pagination}}"></Setter>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"></Setter>
        </Style>
        <Style x:Key="NumsStyle" TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"></Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Grid Margin="{Binding ItemMargin,RelativeSource={RelativeSource AncestorType=local:Pagination}}">
                            <Border Width="{Binding Height,RelativeSource={RelativeSource AncestorType=local:Pagination}}" 
                                    Height="{Binding Height,RelativeSource={RelativeSource AncestorType=local:Pagination}}"
                                    CornerRadius="5" Background="{DynamicResource SecondaryBrush}">
                                <TextBlock Style="{StaticResource PaginationNum}"
                                           Text="{Binding}"></TextBlock>
                            </Border>
                            <Border Name="Active" 
                                    Width="{Binding Height, RelativeSource={RelativeSource AncestorType=local:Pagination}}"
                                    Height="{Binding DataContext.ActiveHeight, RelativeSource={RelativeSource AncestorType=local:Pagination}}" 
                                    CornerRadius="5" 
                                    Background="{DynamicResource PrimaryBrush_2}" 
                                    VerticalAlignment="Bottom"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="0"></ScaleTransform>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard TargetName="Active" TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
                                            <DoubleAnimation To="1" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard TargetName="Active" TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
                                            <DoubleAnimation To="0" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </UserControl.Resources>
    <StackPanel Name="Panel" Orientation="Horizontal">
        <TextBlock Foreground="{DynamicResource SecondaryBrush}" 
                   VerticalAlignment="Bottom" 
                   Opacity="0.8"
                   Visibility="{Binding InfoVisibility,RelativeSource={RelativeSource AncestorType=local:Pagination}}">
                <Run Text="{Binding CurrentPage,RelativeSource={RelativeSource AncestorType=local:Pagination},Mode=TwoWay}"></Run>
                <Run Text=" | "></Run>
                <Run Text="共 "></Run>
                <Run Text="{Binding PageCount,RelativeSource={RelativeSource AncestorType=local:Pagination}}"></Run>
                <Run Text=" 页"></Run>
            </TextBlock>
        <local:Button Style="{StaticResource PaginateBtn}"
                      Click="Home_OnClick"
                      Visibility="{Binding HomeAndEndButtonVisibility,RelativeSource={RelativeSource AncestorType=local:Pagination}}">
            <TextBlock Style="{StaticResource PaginateIcon}" 
                       Text="&#xe901;"
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="-90"></RotateTransform>
                </TextBlock.RenderTransform>
            </TextBlock>
        </local:Button>
        <local:Button Style="{StaticResource PaginateBtn}"
                      Click="Left_OnClick">
            <TextBlock Style="{StaticResource PaginateIcon}" 
                       Text="&#xe903;"
                       RenderTransformOrigin="0.5,0.5"
                       Visibility="{Binding LeftAndRightButtonVisibility,RelativeSource={RelativeSource AncestorType=local:Pagination}}">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="-90"></RotateTransform>
                </TextBlock.RenderTransform>
            </TextBlock>
        </local:Button>
        <ScrollViewer Name="ScrollViewer" 
                      CanContentScroll="False" 
                      HorizontalScrollBarVisibility="Hidden" 
                      VerticalScrollBarVisibility="Disabled"
                      MaxWidth="{Binding MaxWidth}"
                      Visibility="{Binding PageNumVisibility,RelativeSource={RelativeSource AncestorType=local:Pagination}}">
            <ListView Name="Nums" 
                      ItemsSource="{Binding Pages}"
                      Height="{Binding ListHeight}"
                      SelectedItem="{Binding CurrentPage,RelativeSource={RelativeSource AncestorType=local:Pagination},Mode=TwoWay}"
                      ItemContainerStyle="{StaticResource NumsStyle}"
                      SelectionChanged="Nums_OnSelectionChanged">
                <ListView.RenderTransform>
                    <TranslateTransform Y="-1"></TranslateTransform>
                </ListView.RenderTransform>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"></StackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </ScrollViewer>
        <local:Button Style="{StaticResource PaginateBtn}"
                      Click="Right_OnClick">
            <TextBlock Style="{StaticResource PaginateIcon}" 
                       Text="&#xe903;"
                       RenderTransformOrigin="0.5,0.5"
                       Visibility="{Binding LeftAndRightButtonVisibility,RelativeSource={RelativeSource AncestorType=local:Pagination}}">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="90"></RotateTransform>
                </TextBlock.RenderTransform>
            </TextBlock>
        </local:Button>
        <local:Button Style="{StaticResource PaginateBtn}"
                      Click="End_OnClick"
                      Visibility="{Binding HomeAndEndButtonVisibility,RelativeSource={RelativeSource AncestorType=local:Pagination}}">
            <TextBlock Style="{StaticResource PaginateIcon}" 
                       Text="&#xe901;"
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="90"></RotateTransform>
                </TextBlock.RenderTransform>
            </TextBlock>
        </local:Button>
        <local:TextInput Width="{Binding Height,RelativeSource={RelativeSource AncestorType=local:Pagination}}" 
                         Height="{Binding Height,RelativeSource={RelativeSource AncestorType=local:Pagination}}"
                         Text="{Binding CurrentPage,RelativeSource={RelativeSource AncestorType=local:Pagination},Mode=TwoWay}"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         FontSize="16"
                         ToolTip="输入当前页面后点击其他地方即可跳转"
                         Visibility="{Binding GoToButtonVisibility,RelativeSource={RelativeSource AncestorType=local:Pagination}}"></local:TextInput>
    </StackPanel>
</UserControl>
