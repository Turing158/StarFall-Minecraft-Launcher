<UserControl x:Class="StarFallMC.Component.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:StarFallMC.Component"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Border Style="{StaticResource Rect}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="&#xe679;" 
                       FontSize="30" 
                       HorizontalAlignment="Center"
                       FontFamily="{StaticResource IconFontFamily}"
                       RenderTransformOrigin="0.5,0.5" Foreground="{DynamicResource SecondaryBrush}">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="0"></RotateTransform>
                </TextBlock.RenderTransform>
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)">
                                <DoubleAnimation By="360" Duration="0:0:1.2" RepeatBehavior="Forever"></DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Text="{Binding PercentText,RelativeSource={RelativeSource AncestorType=local:Loading},Mode=TwoWay}" 
                       Margin="0 10" 
                       Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
        </StackPanel>
    </Border>
</UserControl>
