<UserControl x:Class="StarFallMC.Component.Notices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:component="clr-namespace:StarFallMC.Component"
             mc:Ignorable="d"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid ClipToBounds="False">
        <ScrollViewer Name="ScrollViewer" 
                      VerticalScrollBarVisibility="Hidden"
                      Margin="10 5 10 0" 
                      ClipToBounds="True"
                      CanContentScroll="False">
            <VirtualizingStackPanel Name="NoticesContainer" 
                                    Margin="0 0 5 0" 
                                    CanHorizontallyScroll="False"></VirtualizingStackPanel>
        </ScrollViewer>
        <component:TopButton Margin="0 40" BindingScrollViewer="{Binding ElementName=ScrollViewer}"></component:TopButton>
    </Grid>
</UserControl>
