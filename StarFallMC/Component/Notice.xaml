<UserControl x:Class="StarFallMC.Component.Notice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:StarFallMC.Component"
             xmlns:wpf="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="local:Notice">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:Notice">
                        <local:CollapsePanel Name="NoticeContainer">
                            <local:CollapsePanel.TitleContent>
                                <Grid>
                                    <Image Width="{Binding IconSize, RelativeSource={RelativeSource AncestorType=local:Notice}}"
                                           Height="{Binding IconSize, RelativeSource={RelativeSource AncestorType=local:Notice}}"
                                           HorizontalAlignment="Left" VerticalAlignment="Center"
                                           Margin="8 0"
                                           Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=local:Notice}}"
                                           Stretch="UniformToFill"></Image>
                                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:Notice}}"
                                               FontSize="{Binding TitleFontSize, RelativeSource={RelativeSource AncestorType=local:Notice}}"
                                               Foreground="{Binding TitleForeground, RelativeSource={RelativeSource AncestorType=local:Notice}}"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="{Binding TitleMargin}"
                                               TextWrapping="WrapWithOverflow"
                                               TextTrimming="WordEllipsis"></TextBlock>
                                </Grid>
                            </local:CollapsePanel.TitleContent>
                            <wpf:MarkdownViewer Markdown="{Binding ContentText, RelativeSource={RelativeSource AncestorType=local:Notice}}"
                                                Foreground="{Binding ContentForeground, RelativeSource={RelativeSource AncestorType=local:Notice}}"
                                                Pipeline="{Binding MarkdownPipeline}">
                                <wpf:MarkdownViewer.Resources>
                                    <Style TargetType="FlowDocumentScrollViewer">
                                        <Setter Property="IsSelectionEnabled" Value="False" />
                                        <Setter Property="IsInactiveSelectionHighlightEnabled" Value="False" />
                                    </Style>
                                </wpf:MarkdownViewer.Resources>
                            </wpf:MarkdownViewer>
                        </local:CollapsePanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>
