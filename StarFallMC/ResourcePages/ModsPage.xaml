<Page x:Class="StarFallMC.ResourcePages.ModsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StarFallMC.ResourcePages"
      xmlns:util="clr-namespace:StarFallMC.Util"
      xmlns:comp="clr-namespace:StarFallMC.Component"
      mc:Ignorable="d"
      Title="ModsPage" Height="380" Width="640"
      Loaded="ModsPage_OnLoaded"
      Unloaded="ModsPage_OnUnloaded">
    <Page.Resources>
        <util:StringNotEmptyToVisibilityVisibleConverter x:Key="StringNotEmptyToVisibilityVisibleConverter" />
        <util:BooleanTrueToVisibilityVisibleConverter x:Key="BooleanTrueToVisibilityVisibleConverter" />
        <util:BooleanFalseToVisibilityVisibleConverter x:Key="BooleanFalseToVisibilityVisibleConverter" />
        <Style x:Key="ModsListViewStyle" TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Grid Height="40" Margin="10 0">
                            <Border Background="{DynamicResource PrimaryBrush}"></Border>
                            <Border Name="Bg"
                                    CornerRadius="5"
                                    BorderBrush="{DynamicResource SecondaryBrush}"
                                    BorderThickness="1" Opacity="0">
                            </Border>
                            <Grid>
                                <Border Width="30" Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="5 0"
                                        CornerRadius="5"
                                        Background="{DynamicResource PrimaryBrush_2}">
                                    <TextBlock Text="&#xe61d;"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               FontSize="16"
                                               FontFamily="{StaticResource IconFontFamily}"></TextBlock>
                                </Border>
                                <Border Width="30" Height="30"
                                        Background="{DynamicResource PrimaryBrush}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="5 0">
                                    <Image Width="30" Height="30"
                                           Source="{Binding Logo}"></Image>
                                </Border>
                                <StackPanel Name="ModTitle" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal"
                                            Margin="40 2 0 0">
                                    <TextBlock Text="{Binding DisplayName}" 
                                               FontSize="13"
                                               MaxWidth="300"
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis"
                                               Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
                                    <TextBlock FontSize="12"
                                               Text=" | "
                                               Foreground="{DynamicResource SecondaryBrush_1}"
                                               Opacity="0.8"></TextBlock>
                                    <TextBlock FontSize="12"
                                               Text="{Binding ResourceVersion}"
                                               VerticalAlignment="Bottom"
                                               Margin="0 0 0 2"
                                               Foreground="{DynamicResource SecondaryBrush_1}"
                                               Opacity="0.8"></TextBlock>
                                    <Border Height="18" CornerRadius="5" 
                                            Background="{DynamicResource PrimaryBrush_4}" 
                                            Margin="5 0 5 2" 
                                            Padding="4 0"
                                            Visibility="{Binding ResourceSource, Converter={StaticResource StringNotEmptyToVisibilityVisibleConverter}}">
                                        <TextBlock Text="{Binding ResourceSource}" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   FontSize="11" 
                                                   Foreground="{DynamicResource PrimaryBrush}"></TextBlock>
                                    </Border>
                                </StackPanel>
                                <TextBlock Name="description"
                                           MaxWidth="520"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Bottom"
                                           Margin="40 0 0 2"
                                           FontSize="11"
                                           TextWrapping="NoWrap"
                                           TextTrimming="WordEllipsis"
                                           Foreground="{DynamicResource SecondaryBrush_1}"
                                           Opacity="0.6"
                                           Text="{Binding Description}">
                                </TextBlock>
                                <TextBlock Name="descriptionLimit"
                                           MaxWidth="430"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Bottom"
                                           Margin="40 0 0 2"
                                           FontSize="11"
                                           TextWrapping="NoWrap"
                                           TextTrimming="WordEllipsis"
                                           Foreground="{DynamicResource SecondaryBrush_1}"
                                           Opacity="0"
                                           Text="{Binding Description}">
                                </TextBlock>
                                <Border Name="DisabledBg" 
                                        CornerRadius="5" 
                                        Background="{DynamicResource SecondaryBrush}" 
                                        Opacity="0.2"
                                        RenderTransformOrigin="0.5,0.5"
                                        Tag="{Binding Disabled}"
                                        Loaded="Disabled_OnLoaded">
                                </Border>
                                <Border Name="Disabled" 
                                        Width="{Binding ActualWidth,ElementName=ModTitle}" 
                                        Height="2" Margin="40 10 0 0" 
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Left" 
                                        Background="{DynamicResource SecondaryBrush}"
                                        RenderTransformOrigin="0.5,0.5"
                                        Tag="{Binding Disabled}"
                                        Loaded="Disabled_OnLoaded">
                                </Border>
                                <Grid Name="Operate" Width="80"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Opacity="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <comp:TextButton FontFamily="{StaticResource IconFontFamily}"
                                                     Content="&#xe8d1;"
                                                     Focusable="False"
                                                     Tag="{Binding}"
                                                     FontSize="16" Click="ModInfo_OnClick">
                                    </comp:TextButton>
                                    <comp:TextButton Grid.Column="1"
                                                     FontFamily="{StaticResource IconFontFamily}"
                                                     Content="&#xe957;"
                                                     Tag="{Binding}"
                                                     FontSize="16" Click="ModPosition_OnClick">
                                    </comp:TextButton>
                                    <comp:TextButton Grid.Column="2"
                                                     FontFamily="{StaticResource IconFontFamily}"
                                                     Content="&#xe926;"
                                                     Tag="{Binding}"
                                                     Visibility="{Binding Disabled,Converter={StaticResource BooleanFalseToVisibilityVisibleConverter}}"
                                                     FontSize="16" Click="ModDisable_OnClick">
                                    </comp:TextButton>
                                    <comp:TextButton Grid.Column="2"
                                                     FontFamily="{StaticResource IconFontFamily}"
                                                     Content="&#xea18;"
                                                     Tag="{Binding}"
                                                     Visibility="{Binding Disabled, Converter={StaticResource BooleanTrueToVisibilityVisibleConverter}}"
                                                     FontSize="18" Click="ModRollBack_OnClick">
                                    </comp:TextButton>
                                </Grid>
                            </Grid>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bg" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"></DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="Operate" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bg" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"></DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="Operate" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="description" Property="Opacity" Value="0"/>
                                <Setter TargetName="descriptionLimit" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter TargetName="description" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="descriptionLimit" Property="Opacity" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Border Background="#f1f1f1" CornerRadius="10" Width="620" HorizontalAlignment="Left"></Border>
        <ScrollViewer Name="MainScrollViewer" Margin="0 5 10 5"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Auto"
                      CanContentScroll="False"
                      Opacity="0">
            <StackPanel>
                <Border Height="100" Style="{StaticResource RectByMargin}">
                    <Grid>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Text="搜索[暂未开发]"></TextBlock>
                        <comp:TextButton Content="&#xe60c;" 
                                         Margin="10" 
                                         Click="RefreshBtn_OnClick"
                                         FontSize="16"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         ToolTip="刷新"></comp:TextButton>
                    </Grid>
                </Border>
                <Border Style="{StaticResource NoAnimRect}" Margin="20 5">
                    <Grid>
                        <Grid Name="NotExist" Height="50" Margin="0 20" Visibility="Collapsed">
                            <TextBlock HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       FontSize="16" Text="暂无模组资源"
                                       Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
                        </Grid>
                        <Grid>
                            <ListView Name="ListView" 
                                      ItemContainerStyle="{StaticResource ModsListViewStyle}"
                                      ItemsSource="{Binding Mods}" Width="580"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                                      VirtualizingPanel.IsContainerVirtualizable="True"
                                      VirtualizingPanel.ScrollUnit="Pixel"
                                      ScrollViewer.IsDeferredScrollingEnabled="True"
                                      ScrollViewer.CanContentScroll="True"
                                      Margin="0 10">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel VirtualizationMode="Recycling"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                        </Grid>
                    </Grid>
                </Border>
                <comp:Pagination x:Name="Pagination" 
                                 Height="32" 
                                 HorizontalAlignment="Right" 
                                 Margin="0 0 40 0"
                                 PageChanged="Pagination_OnPageChanged"></comp:Pagination>
            </StackPanel>
        </ScrollViewer>
        <comp:Loading x:Name="LoadingBorder" PercentText="{Binding PercentText}"></comp:Loading>
        <comp:TopButton Margin="20 40" BindingScrollViewer="{Binding ElementName=MainScrollViewer}"></comp:TopButton>
    </Grid>
</Page>
