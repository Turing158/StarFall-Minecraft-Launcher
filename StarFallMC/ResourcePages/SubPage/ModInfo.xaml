<Page x:Class="StarFallMC.ResourcePages.SubPage.ModInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StarFallMC.ResourcePages.SubPage"
      xmlns:util="clr-namespace:StarFallMC.Util"
      xmlns:extension="clr-namespace:StarFallMC.Util.Extension"
      xmlns:component="clr-namespace:StarFallMC.Component"
      mc:Ignorable="d"
      Title="ModInfo" Height="400" Width="800">
    <Page.Resources>
        <util:StringEmptyToVisibilityCollapsedConverter x:Key="StringEmptyToVisibilityCollapsedConverter" />
        <util:StringNotEmptyToVisibilityVisibleConverter x:Key="StringNotEmptyToVisibilityVisibleConverter" />
        <Style x:Key="ModsListViewStyle" TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"></Setter>
            <Setter Property="extension:ListViewItemExtension.ClickAnimate" Value="True"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Grid Height="40" Margin="10 0">
                            <Border Background="{DynamicResource PrimaryBrush}"></Border>
                            <Border Name="Bg"   
                                    CornerRadius="5" 
                                    BorderBrush="{DynamicResource SecondaryBrush}" 
                                    BorderThickness="1" Opacity="0">
                            </Border>
                            <Grid>
                                <Border Width="30" Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="5 0"
                                        CornerRadius="5"
                                        Background="{DynamicResource PrimaryBrush_2}">
                                    <TextBlock Text="&#xe61d;" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               FontSize="16"
                                               FontFamily="{StaticResource IconFontFamily}" ></TextBlock>
                                </Border>
                                <StackPanel HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal"
                                            Margin="40 2 0 0">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="13"
                                               Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
                                    <TextBlock FontSize="12"
                                               Text=" | "
                                               Foreground="{DynamicResource SecondaryBrush_1}"
                                               Opacity="0.8"></TextBlock>
                                </StackPanel>
                                <TextBlock HorizontalAlignment="Left" 
                                    VerticalAlignment="Bottom"
                                    Margin="40 0 0 2"
                                    Text="{Binding FileDate}"
                                    Foreground="{DynamicResource SecondaryBrush}"
                                    Opacity="0.6"></TextBlock>
                            </Grid>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bg" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bg" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Border Style="{StaticResource FrameBg}" Opacity="1"></Border>
        <ScrollViewer>
            <StackPanel Margin="0 10">
                <Border Style="{StaticResource RectByMargin}">
                    <StackPanel>
                        <Grid Height="80">
                            <Image Width="60" Height="60"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="10"
                                   Source="{Binding Resource.Logo}"></Image>
                            <Border Width="60" Height="60"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10"
                                    CornerRadius="5"
                                    Visibility="{Binding Resource.Logo, Converter={StaticResource StringEmptyToVisibilityCollapsedConverter}}"
                                    Background="{DynamicResource PrimaryBrush_2}">
                                <TextBlock Text="&#xe61d;" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SecondaryBrush}"
                                           FontSize="25"
                                           FontFamily="{StaticResource IconFontFamily}" ></TextBlock>
                            </Border>
                            <StackPanel Margin="80 10 0 6">
                                <Grid Height="20">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Resource.DisplayName}" 
                                                   FontSize="15" 
                                                   FontWeight="Bold" 
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
                                        <TextBlock Text=" | " VerticalAlignment="Bottom" Margin="0 0 0 2"></TextBlock>
                                        <TextBlock Text="{Binding Resource.ResourceVersion}" 
                                                   VerticalAlignment="Bottom" 
                                                   Foreground="{DynamicResource SecondaryBrush}"
                                                   Opacity="0.8"></TextBlock>
                                    </StackPanel>
                                    <Border Height="18" CornerRadius="5" 
                                            HorizontalAlignment="Right"
                                            Background="{DynamicResource PrimaryBrush_4}" 
                                            Margin="10 0 10 2" 
                                            Padding="4 0"
                                            Visibility="{Binding Resource.ResourceSource, Converter={StaticResource StringNotEmptyToVisibilityVisibleConverter}}">
                                        <TextBlock Text="{Binding Resource.ResourceSource}" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   FontSize="11" 
                                                   Foreground="{DynamicResource PrimaryBrush}"></TextBlock>
                                    </Border>
                                </Grid>
                                <Border Height="1" 
                                        BorderBrush="{DynamicResource SecondaryBrush}" 
                                        BorderThickness="0 1 0 0"
                                        Margin="0 0 5 0"></Border>
                                <StackPanel Height="40" Orientation="Horizontal" Margin="0 2 0 0">
                                    <TextBlock HorizontalAlignment="Left" 
                                               Height="40" Width="510" 
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               Opacity="0.8"
                                               TextWrapping="Wrap" 
                                               Text="{Binding Resource.Description}"
                                               TextTrimming="WordEllipsis"></TextBlock> 
                                    <Border Background="{DynamicResource PrimaryBrush_2}" 
                                            CornerRadius="5" 
                                            Width="150" Height="40">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Resource.Author}" 
                                                       Width="105" Height="30" 
                                                       HorizontalAlignment="Center" 
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Margin="5"></TextBlock>
                                            <component:Button Width="30" Height="30" 
                                                              Tag="{Binding Resource.WebsiteUrl}"
                                                              Click="GoToModWebPage_OnClick">
                                                <TextBlock Text="&#xea17;" FontSize="18" FontFamily="{StaticResource IconFontFamily}"></TextBlock>
                                            </component:Button>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource RectByMargin}" Margin="50 10">
                    <StackPanel>
                        <TextBlock Text="下载源" Style="{StaticResource RectTitle}"></TextBlock>
                        <Border Height="1" Margin="10 0" Background="{DynamicResource SecondaryBrush}"></Border>
                        <Border Name="NoDownloadSource" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontSize="14" Text="没有能下载的源" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        </Border>
                        <ListView Margin="0 10" 
                                  ItemsSource="{Binding Resource.DownloadFiles}" 
                                  ItemContainerStyle="{StaticResource ModsListViewStyle}"
                                  SelectionChanged="Selector_OnSelectionChanged"></ListView>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <component:TopButton Margin="20 40" BindingScrollViewer="{Binding ElementName=ScrollViewer}"></component:TopButton>
    </Grid>
</Page>
