<Page x:Class="StarFallMC.ResourcePages.SubPage.ModInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StarFallMC.ResourcePages.SubPage"
      xmlns:util="clr-namespace:StarFallMC.Util"
      xmlns:extension="clr-namespace:StarFallMC.Util.Extension"
      xmlns:component="clr-namespace:StarFallMC.Component"
      mc:Ignorable="d"
      Title="ModInfo" MinHeight="400" MinWidth="800">
    <Page.Resources>
        <Style x:Key="LoaderLabel" TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{DynamicResource PrimaryBrush_4}"
                                CornerRadius="2"
                                Padding="4 0"
                                Margin="2 1">
                            <TextBlock Text="{Binding}"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       FontSize="11"></TextBlock>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="VersionLabel" TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{DynamicResource SecondaryBrush}"
                                CornerRadius="2"
                                Padding="4 0"
                                Margin="2 1">
                            <TextBlock Text="{Binding}"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       FontSize="11"></TextBlock>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CateGoryLabel" TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{DynamicResource PrimaryBrush_1}"
                                CornerRadius="2" 
                                Margin="2 0"
                                Padding="0">
                            <TextBlock Margin="2 0" 
                                       Padding="0"
                                       
                                       Foreground="{DynamicResource SecondaryBrush}"
                                       Text="{Binding}"></TextBlock>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModsListViewStyle" TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"></Setter>
            <Setter Property="extension:ListViewItemExtension.ClickAnimate" Value="True"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Grid Height="40" Margin="10 0">
                            <Border Background="{DynamicResource PrimaryBrush}"></Border>
                            <Border Name="Bg"   
                                    CornerRadius="5" 
                                    BorderBrush="{DynamicResource SecondaryBrush}" 
                                    BorderThickness="1" Opacity="0">
                            </Border>
                            <Grid>
                                <Border Width="30" Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="5 0"
                                        CornerRadius="5"
                                        Background="{DynamicResource PrimaryBrush_2}">
                                    <TextBlock Text="&#xe61d;" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               FontSize="16"
                                               FontFamily="{StaticResource IconFontFamily}"></TextBlock>
                                </Border>
                                <StackPanel HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal"
                                            Margin="40 2 0 0">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="13"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               VerticalAlignment="Center"></TextBlock>
                                    <TextBlock FontSize="12"
                                               Text=" | "
                                               Foreground="{DynamicResource SecondaryBrush_1}"
                                               Opacity="0.8"
                                               VerticalAlignment="Center"></TextBlock>
                                    <TextBlock Text="{Binding Version}" 
                                               FontSize="12"
                                               Opacity="0.8"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="40 0 0 2" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Bottom">
                                    <TextBlock Text="{Binding Date}"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               Opacity="0.6"></TextBlock>
                                    <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                        <TextBlock Text="&#xe92c;"
                                                   Foreground="{DynamicResource SecondaryBrush}"
                                                   FontFamily="{StaticResource IconFontFamily}"
                                                   Opacity="0.6"
                                                   Margin="0 2 0 0"></TextBlock>
                                        <TextBlock Text="{Binding Size}"
                                                   Foreground="{DynamicResource SecondaryBrush}"
                                                   Opacity="0.6"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                                <ListView HorizontalAlignment="Right"
                                          VerticalAlignment="Top"
                                          Margin="1"
                                          ItemContainerStyle="{StaticResource LoaderLabel}"
                                          ItemsSource="{Binding ModLoader}">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"></StackPanel>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                </ListView>
                                <ListView HorizontalAlignment="Right"
                                          VerticalAlignment="Bottom"
                                          Margin="1"
                                          ItemContainerStyle="{StaticResource VersionLabel}"
                                          ItemsSource="{Binding McVersion,Converter={StaticResource ListCountTwoMoreConverter}}">
                                    <ListView.ToolTip>
                                        <ToolTip>
                                            <ListView ItemContainerStyle="{StaticResource VersionLabel}"
                                                      ItemsSource="{Binding McVersion}">
                                                <ListView.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" MaxWidth="500"></WrapPanel>
                                                    </ItemsPanelTemplate>
                                                </ListView.ItemsPanel>
                                            </ListView>
                                        </ToolTip>
                                    </ListView.ToolTip>
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"></StackPanel>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                </ListView>
                            </Grid>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bg" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bg" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Page.Resources>
    <Grid>
        <Border Style="{StaticResource FrameBg}" Opacity="1"></Border>
        <ScrollViewer Name="ScrollViewer" CanContentScroll="False">
            <StackPanel Margin="0 10">
                <Border Style="{StaticResource RectByMargin}">
                    <StackPanel>
                        <Grid Name="ModElementInfo" Height="80">
                            <Image Width="60" Height="60"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="10"
                                   Source="{Binding Resource.Logo}"></Image>
                            <Border Width="60" Height="60"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10"
                                    CornerRadius="5"
                                    Visibility="{Binding Resource.Logo, Converter={StaticResource StringEmptyToVisibilityVisibleConverter}}"
                                    Background="{DynamicResource PrimaryBrush_2}">
                                <TextBlock Text="&#xe61d;" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SecondaryBrush}"
                                           FontSize="25"
                                           FontFamily="{StaticResource IconFontFamily}" ></TextBlock>
                            </Border>
                            <StackPanel Margin="80 10 0 6">
                                <Grid Height="20">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Resource.DisplayName}" 
                                                   FontSize="15" 
                                                   FontWeight="Bold" 
                                                   VerticalAlignment="Top"
                                                   Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
                                        <StackPanel Orientation="Horizontal" 
                                                    Visibility="{Binding Resource.ChineseName,Converter={StaticResource StringEmptyToVisibilityCollapsedConverter}}">
                                            <TextBlock FontSize="12"
                                                       Text=" | "
                                                       Foreground="{DynamicResource SecondaryBrush_1}"
                                                       Opacity="0.8"></TextBlock>
                                            <TextBlock FontSize="12"
                                                       Text="{Binding Resource.EnglishName}"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource SecondaryBrush_1}"
                                                       Opacity="0.8"></TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Height="18" CornerRadius="5" 
                                            HorizontalAlignment="Right"
                                            Background="{DynamicResource PrimaryBrush_4}" 
                                            Margin="10 0 10 2" 
                                            Padding="4 0"
                                            Visibility="{Binding Resource.ResourceSource, Converter={StaticResource StringEmptyToVisibilityCollapsedConverter}}">
                                        <TextBlock Text="{Binding Resource.ResourceSource}" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   FontSize="11" 
                                                   Foreground="{DynamicResource PrimaryBrush}"></TextBlock>
                                    </Border>
                                </Grid>
                                <Border Height="1" 
                                        BorderBrush="{DynamicResource SecondaryBrush}" 
                                        BorderThickness="0 1 0 0"
                                        Margin="0 0 5 0"></Border>
                                <Grid Height="40" Margin="0 2 10 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock HorizontalAlignment="Left" 
                                               Height="40"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               Opacity="0.8"
                                               TextWrapping="Wrap" 
                                               Text="{Binding Resource.Description}"
                                               TextTrimming="WordEllipsis"></TextBlock> 
                                    <Border Grid.Column="1" Background="{DynamicResource PrimaryBrush_2}" 
                                            CornerRadius="5" 
                                            Width="150" Height="40">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Resource.Author}" 
                                                       Width="105" Height="30" 
                                                       HorizontalAlignment="Center" 
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Margin="5"></TextBlock>
                                            <component:Button Width="30" Height="30" 
                                                              Tag="{Binding Resource.WebsiteUrl}"
                                                              Click="GoToModWebPage_OnClick">
                                                <TextBlock Text="&#xea17;" FontSize="18" FontFamily="{StaticResource IconFontFamily}"></TextBlock>
                                            </component:Button>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ListView HorizontalAlignment="Left"
                                      Margin="10 0 0 0"
                                      ItemContainerStyle="{StaticResource CateGoryLabel}"
                                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                      ItemsSource="{Binding Resource.Categories}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Text="&#xe60c;" 
                                           FontSize="12"
                                           Margin="0 2 2 0"
                                           FontFamily="{StaticResource IconFontFamily}"
                                           Opacity="0.6"></TextBlock>
                                <TextBlock FontSize="12"
                                           Foreground="{DynamicResource SecondaryBrush_1}"
                                           Opacity="0.6"
                                           Text="{Binding Resource.UpdatedTimeAgo}">
                                </TextBlock>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="5 0">
                                <TextBlock Text="&#xe92c;" 
                                           FontSize="14"
                                           FontFamily="{StaticResource IconFontFamily}"
                                           Opacity="0.6"
                                           Margin="0 2 0 0"></TextBlock>
                                <TextBlock Margin="5 0" 
                                           Text="{Binding Resource.DownloadCountText}" 
                                           Opacity="0.6"></TextBlock>
                            </StackPanel>
                        </Grid>
                        <WrapPanel Orientation="Horizontal"
                                   Margin="10 0"
                                   HorizontalAlignment="Left"
                                   MaxWidth="{Binding ActualWidth,ElementName=ModElementInfo}">
                            <TextBlock Text="支持加载器：" VerticalAlignment="Center"/>
                            <ItemsControl ItemsSource="{Binding Resource.Loaders}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SecondaryBrush}" 
                                                Margin="2 1"
                                                CornerRadius="2">
                                            <TextBlock Text="{Binding}" 
                                                       Margin="5 0"
                                                       Foreground="{DynamicResource PrimaryBrush}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal"
                                   Margin="10 0 10 5"
                                   HorizontalAlignment="Left"
                                   MaxWidth="{Binding ActualWidth,ElementName=ModElementInfo}">
                            <TextBlock Text="游戏版本：" VerticalAlignment="Center"/>
                            <ItemsControl ItemsSource="{Binding Resource.GameVersions}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource PrimaryBrush_4}" 
                                                Margin="2 1"
                                                CornerRadius="2">
                                            <TextBlock Text="{Binding}" 
                                                       Margin="5 0"
                                                       Foreground="{DynamicResource PrimaryBrush}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </WrapPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource RectByMargin}" Margin="50 10">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="下载源" Style="{StaticResource RectTitle}"></TextBlock>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0 0 10 0">
                                <component:ToggleButton Margin="0 0 10 0"
                                                        Visibility="{Binding PlatFormVisibility}"
                                                        Click="Platform_OnClick"
                                                        IsChecked="{Binding IsCurseForgeSource,Mode=TwoWay}">
                                    <component:ToggleButton.ToolTip>
                                        <ToolTip>
                                            <StackPanel>
                                                <TextBlock Text="切换下载源" FontSize="13"></TextBlock>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="12" Height="12"
                                                           VerticalAlignment="Center"
                                                           Margin="5 0"
                                                           Source="../../assets/DefaultGameIcon/modrinth.png"></Image>
                                                    <TextBlock Text="Modrinth"></TextBlock>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="12" Height="12"
                                                           VerticalAlignment="Center"
                                                           Margin="5 0"
                                                           Source="../../assets/DefaultGameIcon/curseForge.png"></Image>
                                                    <TextBlock Text="CurseForge"></TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </ToolTip>
                                    </component:ToggleButton.ToolTip>
                                    <component:ToggleButton.LeftContent>
                                        <Image Width="15" Height="15" 
                                               Source="../../assets/DefaultGameIcon/modrinth.png"></Image>
                                    </component:ToggleButton.LeftContent>
                                    <component:ToggleButton.RightContent>
                                        <Image Width="15" Height="15" 
                                               Source="../../assets/DefaultGameIcon/curseForge.png"></Image>
                                    </component:ToggleButton.RightContent>
                                </component:ToggleButton>
                                <component:TextButton Content="&#xe60c;"
                                                      FontSize="16"
                                                      Click="RefreshBtn_OnClick"></component:TextButton>
                            </StackPanel>
                        </Grid>
                        <Border Height="1" Margin="10 0" Background="{DynamicResource SecondaryBrush}"></Border>
                        <Grid>
                            <Border Name="NoDownloadSource" Height="30" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontSize="14" Text="没有能下载的源" 
                                           Foreground="{DynamicResource SecondaryBrush}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            </Border>
                            <Border Name="Loading" Height="30" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" Margin="0  5 0 0">
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="&#xe679;" 
                                               FontSize="18" 
                                               FontFamily="{StaticResource IconFontFamily}"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               Margin="5 0"
                                               RenderTransformOrigin="0.5,0.5">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="0"></RotateTransform>
                                        </TextBlock.RenderTransform>
                                        <TextBlock.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)" 
                                                                         From="0" To="360" Duration="0:0:2"></DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </TextBlock.Triggers>
                                    </TextBlock>
                                    <TextBlock Text="加载中..." 
                                               FontSize="14" 
                                               Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
                                </StackPanel>
                            </Border>
                            <ListView Margin="0 10" 
                                      ItemsSource="{Binding Downloaders,Mode=TwoWay}" 
                                      ItemContainerStyle="{StaticResource ModsListViewStyle}"
                                      SelectionChanged="Selector_OnSelectionChanged"></ListView>
                        </Grid>
                    </StackPanel>
                </Border>
                <component:Pagination x:Name="Pagination" Height="32" 
                                      HorizontalAlignment="Right" 
                                      PageChanged="Pagination_OnPageChanged"
                                      VerticalAlignment="Center" 
                                      Margin="0 0 45 0"></component:Pagination>
            </StackPanel>
        </ScrollViewer>
        <component:TopButton Margin="20 40" 
                             BindingScrollViewer="{Binding ElementName=ScrollViewer}"></component:TopButton>
    </Grid>
</Page>
