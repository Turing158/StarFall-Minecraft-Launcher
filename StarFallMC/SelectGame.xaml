<Page x:Class="StarFallMC.SelectGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:comp="clr-namespace:StarFallMC.Component"
      mc:Ignorable="d"
      KeepAlive="True"
      Title="SelectGame" MinHeight="400" MinWidth="800"
      Unloaded="SelectGame_OnUnloaded">
    <Page.Resources>
        <ResourceDictionary Source="Style/SelectGameStyle.xaml"></ResourceDictionary>
    </Page.Resources>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard TargetName="DirSelectBorder" TargetProperty="Width">
                    <DoubleAnimation From="0" 
                                     To="{Binding ActualWidth,ElementName=DirSelectBorder}" 
                                     FillBehavior="Stop" 
                                     Duration="0:0:0.5"
                                     EasingFunction="{StaticResource ElasticEaseOut}"></DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
            <BeginStoryboard>
                <Storyboard TargetName="GameSelect" TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                    <DoubleAnimation From="{Binding ActualHeight,ElementName=GameSelect}" To="0" Duration="0:0:0.5" 
                                     EasingFunction="{StaticResource ElasticEaseOut}"></DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <Grid Background="Transparent">
        <Border Style="{StaticResource FrameBg}"></Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4.5*"/>
            </Grid.ColumnDefinitions>
            <Border Name="DirSelectBorder" 
                    Style="{StaticResource Rect}"
                    Margin="20 20 0 15" >
                <Grid>
                    <TextBlock 
                        Text="选择文件夹:" 
                        Foreground="{DynamicResource SecondaryBrush_2}"
                        Margin="15 15"
                        FontSize="15"
                        Height="20" 
                        VerticalAlignment="Top"></TextBlock>
                    <StackPanel Orientation="Horizontal" Height="25" Width="150" 
                                HorizontalAlignment="Right" VerticalAlignment="Top" 
                                Margin="10">
                        <comp:PlainButton Width="25" 
                                FontSize="18" 
                                ToolTip="添加" Click="AddDir_OnClick">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" Text="&#xe95b;"></TextBlock>
                        </comp:PlainButton>
                        <comp:PlainButton Width="25" 
                                          Margin="5 0 2.5 0" 
                                          FontSize="18" 
                                          ToolTip="删除该文件夹" Click="DelDir_OnClick">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" Text="&#xe959;"></TextBlock>
                        </comp:PlainButton>
                        <comp:PlainButton Width="25" 
                                          Margin="2.5 0 5 0" 
                                          FontSize="16" 
                                          ToolTip="打开文件夹" Click="OpenDir_OnClick">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" Text="&#xe957;"></TextBlock>
                        </comp:PlainButton>
                        <comp:PlainButton Width="25" 
                                          FontSize="16" 
                                          ToolTip="刷新文件夹中的版本" Click="RefreshDir_OnClick">
                            <TextBlock Text="&#xe60c;" FontFamily="{StaticResource IconFontFamily}"></TextBlock>
                        </comp:PlainButton>
                        <comp:PlainButton Width="25"
                                          FontSize="22" 
                                          Margin="5 0 0 0"
                                          ToolTip="查看Minecraft属性" Click="GameInfo_OnClick">
                            <TextBlock FontFamily="{StaticResource IconFontFamily}" Text="&#xe7f9;"></TextBlock>
                        </comp:PlainButton>
                    </StackPanel>
                    <Border Margin="10 38"
                            Height="1" 
                            VerticalAlignment="Top" 
                            Background="{DynamicResource SecondaryBrush_2}"></Border>
                    <Border Name="LimitPathTextBlock" Height="1" VerticalAlignment="Top" Margin="20 0"></Border>
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0 40 0 6">
                        <ListView Name="DirSelect"
                                  Margin="0 0 10 0"
                                  ItemsSource="{Binding Dirs}"
                                  ItemContainerStyle="{StaticResource DirSelectStyle}"
                                  SelectionChanged="DirSelect_OnSelectionChanged"></ListView>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <Grid Grid.Column="1" Name="GameSelectGrid"
                  Margin="40 20 15 10">
                <Grid.RenderTransform>
                    <TranslateTransform Y="0"></TranslateTransform>
                </Grid.RenderTransform>
                <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Auto">
                    <ListView Name="GameSelect" 
                              ItemsSource="{Binding Games}" 
                              SelectionChanged="GameSelect_OnSelectionChanged"
                              VirtualizingStackPanel.IsVirtualizing="False"
                              ItemContainerStyle="{StaticResource GameSelectStyle}">
                        <ListView.RenderTransform>
                            <TranslateTransform></TranslateTransform>
                        </ListView.RenderTransform>
                    </ListView>
                </ScrollViewer>
                <Border Name="NoGame" Width="300" Height="80" Style="{StaticResource Rect}">
                    <TextBlock HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Text="未找到Minecraft版本"
                               FontSize="25"
                               Foreground="{DynamicResource SecondaryBrush}"></TextBlock>
                </Border>
            </Grid>
        </Grid>
        <comp:MaskControl x:Name="GameInfoMaskControl" ToolTip="{Binding CurrentGame.Path}">
            <Border Width="600" Height="190" Style="{StaticResource Rect}">
                <StackPanel Orientation="Vertical">
                    <Grid Height="70" VerticalAlignment="Top">
                        <Image Width="40" Height="40"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="30 15"
                               Source="{DynamicResource CurrentGameIcon}"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <ScaleTransform></ScaleTransform>
                            </Image.RenderTransform>
                            <Image.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                             Duration="0:0:0.5" To="1.15" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                             Duration="0:0:0.5" To="1.15" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                             Duration="0:0:0.5" To="1" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                             Duration="0:0:0.5" To="1" EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Image.Triggers>
                        </Image>
                        <Border Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" 
                                Margin="90 0 20 0" 
                                Style="{StaticResource Rect}" 
                                Padding="15 0 15 0">
                            <Grid Height="40">
                                <TextBlock HorizontalAlignment="Left" 
                                           VerticalAlignment="Top" 
                                           FontSize="18"
                                           Margin="0 2 0 0"
                                           Text="{Binding CurrentGame.Name}"></TextBlock>
                                <TextBlock HorizontalAlignment="Left" 
                                           VerticalAlignment="Bottom" 
                                           TextWrapping="NoWrap"
                                           TextTrimming="WordEllipsis"
                                           FontSize="11"
                                           Text="{Binding CurrentGame.Path}"></TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                    <Border Width="560" Height="1" Background="{DynamicResource SecondaryBrush_2}"></Border>
                    <Grid Margin="20 10" Height="85">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <comp:PlainButton Style="{StaticResource GameInfoBtn}" 
                                          Content="查看版本文件夹" Click="OpenVersionDir_OnClick"></comp:PlainButton>
                        <comp:PlainButton Grid.Column="1" Style="{StaticResource GameInfoBtn}" 
                                          Content="修改版本名称" Click="SettingVersionName_OnClick"></comp:PlainButton>
                        <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="10 5" >
                            <comp:PlainButton Width="128" FontSize="15" 
                                              Content="修改版本图标" Click="SettingVersionIcon_OnClick"></comp:PlainButton>
                            <comp:PlainButton Width="32" Margin="5 0" FontSize="18" 
                                              Content="↺" Click="DefaultVersionIcon_OnClick"></comp:PlainButton>
                        </StackPanel>
                        <comp:PlainButton Grid.Row="1" Style="{StaticResource GameInfoBtn}" 
                                          Content="补全资源文件" Click="FixResourceFile_OnClick"></comp:PlainButton>
                        <comp:PlainButton Grid.Row="1" Grid.Column="1" Style="{StaticResource GameInfoBtn}" 
                                          Content="查看Native文件夹" Click="OpenNativeDir_OnClick"></comp:PlainButton>
                        <comp:PlainButton Grid.Row="1" Grid.Column="2" Style="{StaticResource GameInfoBtn}" 
                                          Content="删除版本" Click="DelGame_OnClick"></comp:PlainButton>
                    </Grid>
                </StackPanel>
            </Border>
        </comp:MaskControl>
        <comp:MaskControl x:Name="RenameVersion" OnHidden="RenameVersion_OnOnClose">
            <Border Width="400" Height="100" Style="{StaticResource Rect}">
                <Grid>
                    <TextBlock FontSize="18" 
                               Text="请输入新的版本名称[Enter确认]" 
                               Margin="0 15 0 0" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Top"></TextBlock>
                    <comp:TextInput x:Name="RenameVersionInput"
                                    Width="300" Height="30" 
                                    FontSize="16" 
                                    VerticalAlignment="Center"
                                    Margin="0 15 0 0" 
                                    Padding="3 0"
                                    VerticalContentAlignment="Center"
                                    KeyDown="RenameVersion_OnKeyDown" 
                                    MaxLength="48" 
                                    Text="{Binding RenameVersionText}"></comp:TextInput>
                    <TextBlock Width="300" VerticalAlignment="Center" 
                               Foreground="DarkRed" 
                               Margin="0 70 0 0" 
                               Text="{Binding RenameVersionTips}"></TextBlock>
                </Grid>
            </Border>
        </comp:MaskControl>
    </Grid>
</Page>
