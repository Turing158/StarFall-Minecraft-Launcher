<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:starFallMc="clr-namespace:StarFallMC">
    
    <FontFamily x:Key="IconFontFamily">/StarFallMC;Component/assets/icon/#iconfont</FontFamily>
    
    <ElasticEase x:Key="ElasticEaseOut" Oscillations="1" Springiness="10" EasingMode="EaseOut"></ElasticEase>
    <ElasticEase x:Key="ElasticEaseIn" Oscillations="1" Springiness="10" EasingMode="EaseIn"></ElasticEase>
    <CubicEase x:Key="CubicEase"></CubicEase>
    
    <BitmapImage x:Key="CurrentGameIcon" UriSource="../assets/DefaultGameIcon/unknowGame.png" CacheOption="OnLoad" CreateOptions="IgnoreImageCache"/>
    <BitmapImage x:Key="PlayerSkin" UriSource="../assets/steve.png" CacheOption="OnLoad" CreateOptions="IgnoreImageCache"/>
    
    <Style x:Key="FrameBg" TargetType="Border">
        <Setter Property="Background" Value="#f1f1f1"></Setter>
        <Setter Property="CornerRadius" Value="0 0 10 10"></Setter>
        <Setter Property="Opacity" Value="0.6"></Setter>
    </Style>
    
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Time now romans"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontFamily" Value="微软雅黑"></Setter>
    </Style>
    
    <Style x:Key="TextBlock" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="#001D1F"></Setter>
    </Style>
    
    <Style TargetType="ToolTip">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Background="#f1f1f1" CornerRadius="5" Padding="5" BorderBrush="#113032" BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="Rect" TargetType="Border">
        <Setter Property="Background" Value="#D7C6C5"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="CornerRadius" Value="5"></Setter>
        <Setter Property="BorderBrush" Value="#264446"></Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" ShadowDepth="2" BlurRadius="20" Opacity="0"></DropShadowEffect>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard
                            TargetProperty="Effect.Opacity">
                            <DoubleAnimation Duration="0:0:0.2" To="0.3"></DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                    <BeginStoryboard>
                        <Storyboard
                            TargetProperty="BorderBrush.Color">
                            <ColorAnimation Duration="0:0:0.15" To="#113032"></ColorAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetProperty="Effect.Opacity">
                            <DoubleAnimation Duration="0:0:0.2" To="0"></DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                    <BeginStoryboard>
                        <Storyboard TargetProperty="BorderBrush.Color">
                            <ColorAnimation Duration="0:0:0.15" To="#264446"></ColorAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="RectByMargin" TargetType="Border" BasedOn="{StaticResource Rect}">
        <Setter Property="Margin" Value="20 10"/>
    </Style>
    
    <Style x:Key="Btn" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Name="Border"
                        Background="#264446"
                        CornerRadius="5"
                        >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        TargetName="Border"
                                        TargetProperty="Background.Color"
                                    >
                                        <ColorAnimation Duration="0:0:0.15" To="#113032"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        TargetName="Border"
                                        TargetProperty="Background.Color"
                                    >
                                        <ColorAnimation Duration="0:0:0.15" To="#264446"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                                
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#D7C6C5"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="BorderBrush" Value="#001D1F"></Setter>
        
    </Style>
    <Style x:Key="PlainBtn" TargetType="Button">
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Name="Border"
                        BorderBrush="#001D1F"
                        BorderThickness="1"
                        Background="#f1f1f1"
                        CornerRadius="3"
                        >
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter Property="Foreground" Value="#113032"></Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#f1f1f1"></Setter>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        TargetName="Border"
                                        TargetProperty="Background.Color"
                                        >
                                        <ColorAnimation Duration="0:0:0.15" To="#113032"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        TargetName="Border"
                                        TargetProperty="Background.Color"
                                    >
                                        <ColorAnimation Duration="0:0:0.15" To="#f1f1f1"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#113032"></Setter>
    </Style>
    
    
    
    
    
    
    <Style TargetType="ScrollViewer">
        <Setter Property="CanContentScroll" Value="True"></Setter>
        <Setter Property="starFallMc:ScrollViewerExtensions.SmoothScroll" Value="True"></Setter>
        <Setter Property="starFallMc:ScrollViewerBehavior.VerticalOffset" Value="{Binding VerticalOffset, Mode=TwoWay}"></Setter>
    </Style>
    
    
    <Style TargetType="Thumb">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Width" Value="6"></Setter>
        <Setter Property="IsTabStop" Value="False"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border
                        Background="#001D1F"
                        CornerRadius="5"
                    ></Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ScrollBar">
        <Setter Property="OverridesDefaultStyle" Value="True"></Setter>
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
        <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Width" Value="10"></Setter>
        <Setter Property="Opacity" Value="0.1"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Track x:Name="PART_Track" IsDirectionReversed="True">
                        <Track.Thumb>
                            <Thumb/> 
                        </Track.Thumb>
                    </Track>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="ValueChanged">
                            <BeginStoryboard>
                                <Storyboard TargetProperty="Opacity">
                                    <DoubleAnimation Duration="0:0:0.2" To="0.4"></DoubleAnimation>
                                    <DoubleAnimation BeginTime="0:0:1" Duration="0:0:0.2" To="0.1"></DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard TargetProperty="Opacity">
                                    <DoubleAnimation Duration="0:0:0.2" To="0.4"></DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard TargetProperty="Opacity">
                                    <DoubleAnimation BeginTime="0:0:1" Duration="0:0:0.2" To="0.1"></DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
                
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ListView">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Name="Border" Background="#f1f1f1" CornerRadius="3" BorderBrush="#001D1F" BorderThickness="1">
                        <Grid Background="Transparent">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          Background="Transparent"
                                          VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          Foreground="#001D1F"/>
                            <TextBlock 
                                Text="{TemplateBinding Tag}" 
                                Background="Transparent"
                                Foreground="#888"
                                Padding="4,0"
                                Visibility="Collapsed"
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="BorderBrush.Color" 
                                            To="#264446" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="BorderBrush.Color" 
                                            To="#001D1F" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="Background.Color" 
                                            To="#f1f1f1" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="Background.Color" 
                                            To="#D7C6C5" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="TextArea" TargetType="TextBox">
        <Setter Property="TextWrapping" Value="Wrap"></Setter>
        <Setter Property="AcceptsReturn" Value="True"></Setter>
        <Setter Property="Padding" Value="2"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Name="Border" Width="{TemplateBinding ActualWidth}" Background="#f1f1f1" CornerRadius="3" BorderBrush="#001D1F" BorderThickness="1">
                        <Grid Background="Transparent">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          Background="Transparent"
                                          VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto"
                                          Foreground="#001D1F"/>
                            <TextBlock 
                                       Text="{TemplateBinding Tag}" 
                                       Background="Transparent"
                                       Foreground="#888"
                                       Padding="4,0"
                                       Visibility="Collapsed"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="BorderBrush.Color" 
                                            To="#264446" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="BorderBrush.Color" 
                                            To="#001D1F" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="Background.Color" 
                                            To="#f1f1f1" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation 
                                            Storyboard.TargetName="Border" 
                                            Storyboard.TargetProperty="Background.Color" 
                                            To="#D7C6C5" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="TbStyle" TargetType="ToggleButton">
        <Setter Property="Background" Value="#264446"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                        <Grid Margin="2.5">
                            <Border Name="Border" HorizontalAlignment="Left" Background="#D7C6C5" Width="35" Height="25" CornerRadius="5">
                                <Border.RenderTransform>
                                    <TranslateTransform X="0"></TranslateTransform>
                                </Border.RenderTransform>
                            </Border>
                            <ContentPresenter></ContentPresenter>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Border" TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
                                        <DoubleAnimation To="40" Duration="0:0:0.5" EasingFunction="{StaticResource ElasticEaseOut}"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Border" TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
                                        <DoubleAnimation To="0" Duration="0:0:0.5" EasingFunction="{StaticResource ElasticEaseOut}"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ToggleButtonText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="Foreground" Value="#264446"></Setter>
        <Setter Property="Margin" Value="3 0"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    
</ResourceDictionary>