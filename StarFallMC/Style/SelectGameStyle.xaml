<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:component="clr-namespace:StarFallMC.Component">
    <Style x:Key="GameSelectStyle" TargetType="ListViewItem" 
           BasedOn="{StaticResource {x:Type ListViewItem}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid Margin="5">
                        <Grid>
                            <Border
                                Name="Border"
                                Width="{TemplateBinding Width}" 
                                Height="{TemplateBinding Height}" 
                                Background="#aaf1f1f1"
                                CornerRadius="5"
                                BorderThickness="1"
                                Opacity="0"
                                BorderBrush="{DynamicResource SecondaryBrush_2}">
                            </Border>
                            <TextBlock Name="GameName" Foreground="{DynamicResource SecondaryBrush_2}" 
                                       HorizontalAlignment="Left" VerticalAlignment="Center" 
                                       FontSize="15" Text="{Binding Name}" Margin="60 0"></TextBlock>
                            <TextBlock Name="GameLoader" Foreground="{DynamicResource SecondaryBrush_2}" 
                                       HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                       FontSize="12" Text="{Binding Loader}" Margin="5"></TextBlock>
                        </Grid>
                        <Border
                            Name="Active"
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}" 
                            Background="{DynamicResource SecondaryBrush_1}"
                            CornerRadius="5"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource SecondaryBrush_2}"
                            Opacity="0">
                            <Grid>
                                <TextBlock Foreground="#f1f1f1" HorizontalAlignment="Left" VerticalAlignment="Center" 
                                           FontSize="15" Text="{Binding Name}" Margin="60 0"></TextBlock>
                                <TextBlock Foreground="#f1f1f1" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                           FontSize="12" Text="{Binding Loader}" Margin="5"></TextBlock>
                            </Grid>
                        </Border>
                        <Image Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" 
                               RenderOptions.BitmapScalingMode="NearestNeighbor">
                            <Image.Source>
                                <BitmapImage UriSource="{Binding Icon}" 
                                             CacheOption="OnLoad" CreateOptions="IgnoreImageCache"></BitmapImage>
                            </Image.Source>
                        </Image>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Opacity" 
                                                         To="1" Duration="0:0:0.2" 
                                                         EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Opacity" 
                                                         To="0" Duration="0:0:0.15"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Active" TargetProperty="Opacity">
                                        <DoubleAnimation Duration="0:0:0.15" To="1"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Active" TargetProperty="Opacity">
                                        <DoubleAnimation Duration="0:0:0.15" To="0"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="DirSelectStyle" TargetType="ListViewItem" 
           BasedOn="{StaticResource {x:Type ListViewItem}}">
        <Setter Property="ToolTip" Value="{Binding Path}"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid Height="50" Margin="5" MaxWidth="285">
                        <Border
                            Name="bg"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="#f1f1f1"
                            Opacity="0"
                            CornerRadius="10"></Border>
                        <Border 
                            Name="Border" 
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}"  
                            Background="Transparent" 
                            CornerRadius="10">
                            <Grid>
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="{DynamicResource SecondaryBrush_2}"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Top"
                                           FontSize="15"
                                           Margin="10"></TextBlock>
                                <TextBlock Text="{Binding Path}" 
                                           Foreground="{DynamicResource SecondaryBrush}"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Bottom" 
                                           Margin="10 5" 
                                           TextTrimming="WordEllipsis"
                                           FontFamily="微软雅黑"
                                           FontWeight="Black"
                                           FontSize="10"></TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" 
                                                        To="#99f1f1f1" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" 
                                                        To="Transparent" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="bg" Storyboard.TargetProperty="Opacity" 
                                                         To="1" Duration="0:0:0.15"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="bg" Storyboard.TargetProperty="Opacity" 
                                                         To="0" Duration="0:0:0.15"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="GameInfoBtn" TargetType="{x:Type component:PlainButton}" 
           BasedOn="{StaticResource {x:Type component:PlainButton}}">
        <Setter Property="Margin" Value="10 5"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
    </Style>
    
    <Storyboard x:Key="GameListChangeAnim" TargetName="GameSelectGrid">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                         To="-400"
                         Duration="0:0:0.3"
                         EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                         To="0"
                         Duration="0:0:0.15"></DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                         To="0"
                         Duration="0:0:0.5" BeginTime="0:0:0.3"
                         EasingFunction="{StaticResource ElasticEaseOut}"></DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                         To="1"
                         Duration="0:0:0.2" BeginTime="0:0:0.3"></DoubleAnimation>
    </Storyboard>
</ResourceDictionary>