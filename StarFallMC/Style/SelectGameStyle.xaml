<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="GameSelectStyle" TargetType="ListViewItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid Margin="5">
                        <Border
                            Name="Border"
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}" 
                            Background="#f1f1f1"
                            CornerRadius="5"
                            BorderThickness="1"
                            BorderBrush="#001D1F">
                            <Grid>
                                <Image Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Source="{Binding Icon}"></Image>
                                <TextBlock Name="GameName" Foreground="#001D1F" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Text="{Binding Name}" Margin="60 0"></TextBlock>
                                <TextBlock Name="GameVersion" Foreground="#001D1F" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="12" Text="{Binding Version}" Margin="5"></TextBlock>
                            </Grid>
                        </Border>
                        <Border
                            Name="Active"
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}" 
                            Background="#113032"
                            CornerRadius="5"
                            BorderThickness="1"
                            BorderBrush="#001D1F"
                            Opacity="0">
                            <Grid>
                                <Image Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Source="{Binding Icon}"></Image>
                                <TextBlock Foreground="#f1f1f1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Text="{Binding Name}" Margin="60 0"></TextBlock>
                                <TextBlock Foreground="#f1f1f1" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="12" Text="{Binding Version}" Margin="5"></TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" To="#264446" Duration="0:0:0.15"></ColorAnimation>
                                        <ColorAnimation Storyboard.TargetName="GameName" Storyboard.TargetProperty="Foreground.Color" To="#f1f1f1" Duration="0:0:0.15"></ColorAnimation>
                                        <ColorAnimation Storyboard.TargetName="GameVersion" Storyboard.TargetProperty="Foreground.Color" To="#f1f1f1" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" To="#f1f1f1" Duration="0:0:0.15"></ColorAnimation>
                                        <ColorAnimation Storyboard.TargetName="GameName" Storyboard.TargetProperty="Foreground.Color" To="#001D1F" Duration="0:0:0.15"></ColorAnimation>
                                        <ColorAnimation Storyboard.TargetName="GameVersion" Storyboard.TargetProperty="Foreground.Color" To="#001D1F" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Active" TargetProperty="Opacity">
                                        <DoubleAnimation Duration="0:0:0.15" To="1"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Active" TargetProperty="Opacity">
                                        <DoubleAnimation Duration="0:0:0.15" To="0"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DirSelectStyle" TargetType="ListViewItem">
        <Setter Property="ToolTip" Value="{Binding Path}"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid Height="50" Margin="5" MaxWidth="285">
                        <Border 
                            Name="bg" 
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}" 
                            Background="#f1f1f1" 
                            Opacity="0" 
                            CornerRadius="10"></Border>
                        <Border 
                            Name="Border" 
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}"  
                            Background="#55f1f1f1" 
                            CornerRadius="10">
                            <Grid>
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="#001D1F"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Top"
                                           FontSize="15"
                                           Margin="10"></TextBlock>
                                <TextBlock Text="{Binding Path}" 
                                           Foreground="#264446"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Bottom" 
                                           Margin="10 5" 
                                           TextTrimming="WordEllipsis"
                                           FontFamily="微软雅黑"
                                           FontWeight="Black"
                                           FontSize="10"></TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" To="#99f1f1f1" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" To="#55f1f1f1" Duration="0:0:0.15"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="bg" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="bg" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Storyboard x:Key="GameListChangeAnim" TargetName="GameSelectGrid">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                         To="-400"
                         Duration="0:0:0.3"
                         EasingFunction="{StaticResource CubicEase}"></DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                         To="0"
                         Duration="0:0:0.15"></DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                         To="0"
                         Duration="0:0:0.5" BeginTime="0:0:0.3"
                         EasingFunction="{StaticResource ElasticEaseOut}"></DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                         To="1"
                         Duration="0:0:0.2" BeginTime="0:0:0.3"></DoubleAnimation>
    </Storyboard>
</ResourceDictionary>